generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id
  userID       String   @unique
  // 用户学号
  passwordHash String?
  avatarUrl    String?
  bio          String?

  // 创建时间默认为现在
  createdAt    DateTime @default(now())

  session      Session[]

  // 在SQL里的表名映射，用users也能访问这个表
  @@map("users")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  // 一个用户可以有多个 session
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Grade {
  student_id String   @id
  average_gpa Float

  @@map("grades")
}

model Condition {
  student_id      String @id
  name            String
  graduation_year Int
  gender          String
  political_status String
  major           String
  hardship_category String
  address         String

  // 在SQL中的表名映射
  @@map("condition")
}

model SecondCourse {
  student_id   String @id
  courses_count Int

  // 在SQL中的表名映射
  @@map("second_course")
}

model Award {
  student_id         String @id
  scholarships_count Int

  // 在SQL中的表名映射
  @@map("award")
}

model Job {
  student_id            String @id
  graduation_destination String
  organization_name      String
  organization_type      String
  industry               String
  location               String
  position_category      String

  // 在SQL中的表名映射
  @@map("job")
}
