generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id
  username     String   @unique
  //用户在系统中显示的名字
  displayName  String
  //google邮箱配置项
  email        String?  @unique
  passwordHash String?
  googleId     String?  @unique
  avatarUrl    String?
  bio          String?
  //创建时间默认为现在
  createdAt    DateTime @default(now())

  session Session[]

  //在SQL里的表名映射，用users也能访问这个表
  @@map("users")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  //一个用户可以有多个session
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("sessions")
}


